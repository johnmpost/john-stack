{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {"@common/*": ["../common/src/*"]}
  },
  "include": ["src", "../common/src/*"],
}
