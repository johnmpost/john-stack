{
  "name": "john-stack",
  "private": true,
  "scripts": {
    "tsx": "tsx --env-file=.env.static --env-file=.env.seed",
    "tf": "terraform -chdir=./dev/tf",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "tsc": "tsc --noEmit",
    "test:all": "tsx ./dev/scripts/run-tests.ts ./src/**/*.test.ts",
    "test": "tsx ./dev/scripts/run-tests.ts",
    "seed": "./dev/scripts/seed-all.sh",
    "client:start": "NODE_OPTIONS='--import tsx/esm' dotenv -e .env.static -e .env.seed -- vite ./src/client --port=5002 --strictPort",
    "client:build": "NODE_OPTIONS='--import tsx/esm' dotenv -e .env.static -e .env.seed -- vite build ./src/client --outDir=../../dist/client --emptyOutDir",
    "client:preview": "NODE_OPTIONS='--import tsx/esm' dotenv -e .env.static -e .env.seed -- vite preview ./src/client --outDir=../../dist/client --port=5002 --strictPort",
    "api:start": "API_DEV_PORT=5001 tsx --env-file=.env.static --env-file=.env.seed --watch ./src/api/dev-server.ts",
    "api:build": "esbuild ./src/api/main.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outdir=dist/api",
    "db:start": "podman-compose -p johnstack_db -f ./dev/dev-services/docker-compose.pg.yaml up -d",
    "db:stop": "podman-compose -p johnstack_db -f ./dev/dev-services/docker-compose.pg.yaml down",
    "db:clean": "podman volume rm johnstack_db_pgdata",
    "idp:start": "podman-compose -p johnstack_idp -f ./dev/dev-services/docker-compose.zitadel.yaml up -d",
    "idp:stop": "podman-compose -p johnstack_idp -f ./dev/dev-services/docker-compose.zitadel.yaml down",
    "idp:clean": "podman volume rm johnstack_idp_pgdata johnstack_idp_machinekey"
  },
  "dependencies": {
    "@effect/schema": "^0.67.21",
    "@effect/sql": "^0.3.10",
    "@effect/sql-pg": "^0.3.11",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@faker-js/faker": "^9.0.3",
    "@mui/joy": "^5.0.0-beta.48",
    "@tanstack/react-query": "^5.40.1",
    "@zitadel/react": "^1.0.3",
    "effect": "^3.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.27.0",
    "react-use": "^17.5.1",
    "ts-pattern": "^5.5.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@jahed/terraform": "^1.10.5",
    "@types/aws-lambda": "^8.10.138",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "body-parser": "^1.20.2",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.23.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "express": "^4.19.2",
    "prettier": "3.3.1",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vite": "^5.0.8"
  }
}
